# Marketing App Complete Configuration Template
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
AWS_ACCOUNT_ID=your-account-id

# Bedrock Configuration
BEDROCK_REGION=us-east-1
NOVA_CANVAS_REGION=us-east-1

# Bedrock Agent IDs (update after deployment)
SUPERVISOR_AGENT_ID=your-supervisor-agent-id
SUPERVISOR_AGENT_ALIAS=TSTALIASID
CONTENT_AGENT_ID=your-content-agent-id
CONTENT_AGENT_ALIAS=TSTALIASID
VISUAL_AGENT_ID=your-visual-agent-id
VISUAL_AGENT_ALIAS=TSTALIASID

# Knowledge Base Configuration
KNOWLEDGE_BASE_ID=your-knowledge-base-id

# S3 Configuration
S3_BUCKET_NAME=your-marketing-assets-bucket
S3_REGION=us-east-1

# Application Settings
PROJECT_NAME=marketing-agent-app
ENVIRONMENT=dev
ENABLE_CLOUDWATCH_LOGS=true

# Rate Limiting
RATE_LIMIT_DELAY=30

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
